@model LeaveManagementSystemProject.Models.DesignationModel

@{
    ViewBag.Title = "CreateDesignation";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<h2>CreateDesignation</h2>
@using (Html.BeginForm("CreateDesignation", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table cellpadding="10">
        <tr>
            <td>@Html.LabelFor(Model => Model.DesignationName)</td>
            <td>@Html.TextBoxFor(Model => Model.DesignationName,new {@maxlength="30" })</td>
            <td>@Html.ValidationMessageFor(model => model.DesignationName, "", new { @style = "color:red"})</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "DisplayDesignation")
            </td>
            <td>
                <input type="submit" id="addDepartment" />
            </td>
        </tr>
    </table>
}


