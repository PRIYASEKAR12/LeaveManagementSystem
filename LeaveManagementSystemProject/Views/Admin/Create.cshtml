@model LeaveManagementSystemProject.Models.DepartmentModel

@{
    ViewBag.Title = "Home";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<h2>Create Department</h2>
@using (Html.BeginForm("Create", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table cellpadding="10" >       
        <tr>
            <td>@Html.LabelFor(Model => Model.DepartmentName)</td>
            <td>@Html.TextBoxFor(Model => Model.DepartmentName,new { maxlength = "40" })</td>
            <td>@Html.ValidationMessageFor(model => model.DepartmentName, "", new { @style = "color:red"})</td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Back to list", "DisplayDepartment")
            </td>
            <td>
                <input type="submit" id="addDepartment" />
            </td>
        </tr>
    </table>
}

